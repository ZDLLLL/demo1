<?xml version="1.0" encoding="utf-8"?>
<zjc.qualitytrackingee.utils.AllGoodsBatchRecyclerItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@android:color/white"
    android:layout_marginBottom="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/goodsbatch_slide"
            android:layout_toRightOf="@+id/allgoodsbatch_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/appraise_goodsbatch_tv"
                android:layout_height="match_parent"
                android:layout_width="80dp"
                android:gravity="center"
                android:background="#EE7621"
                android:text="查看评价" />
            <TextView
                android:id="@+id/duty_goodsbatch_tv"
                android:layout_height="match_parent"
                android:layout_width="80dp"
                android:gravity="center"
                android:background="@drawable/button_red"
                android:text="责任追踪"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/allgoodsbatch_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/content_white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/goodsbatch_image_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="2dp"
                android:paddingTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/goodsbatch_name_tv"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="苹果"
                    android:textColor="#000000"
                    android:textSize="13dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="right"
                        android:text="价格："
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/goodsbatch_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:gravity="left"
                        android:text="￥40"
                        android:textSize="13dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="right"
                        android:layout_marginLeft="10dp"
                        android:text="商品编号："
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/goodsbatch_id_tv"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:gravity="left"
                        android:text="1"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    >
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="描述："
                        android:layout_marginTop="5dp"

                        android:gravity="right|top"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:gravity="left|top"
                        android:id="@+id/goodsbatch_describe_tv"
                        android:text="好吃极了"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</zjc.qualitytrackingee.utils.AllGoodsBatchRecyclerItemView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zjc.qualitytrackingee.activity.ChangePhoneActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/changephone_rl"
        android:background="#00A7FF"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/changephone_back_ll"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/back"/>
        </LinearLayout>

        <TextView
            android:text="更换手机号"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/changephone_rl"
        android:id="@+id/changephone_hint_rl"
        android:layout_height="80dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="更换手机号后，下次登录可使用新手机号登录"
            android:textSize="16dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"

            android:layout_height="40dp">
        <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="当前手机号："
        android:textSize="16dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/changephone_oldphone_tv"
            android:layout_marginLeft="130dp"
            android:text="18248617820"
            android:textSize="16dp"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="148dp">

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/changephone_newphone_et"
            android:hint="新的手机号" />

        <EditText
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/changephone_yzm_et"
            android:layout_marginTop="40dp"
            android:hint="请输入验证码" />

        <Button
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="#D1D1D1"
            android:id="@+id/changephone_yzm_bt"
            android:layout_marginLeft="270dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="40dp"
            android:text="获取验证码" />
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="250dp"
        android:id="@+id/changephone_ok_bt"
        android:background="@drawable/shape"
        android:text="完成"
        />
</RelativeLayout>

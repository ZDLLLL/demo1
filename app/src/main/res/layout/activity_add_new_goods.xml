<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zjc.qualitytrackingee.activity.AddNewGoodsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#11B7f5"
        android:id="@+id/newgoods_title_rl"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/newaddgoods_back_ll"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/back"/>
        </LinearLayout>

        <TextView
            android:text="产品发布"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_marginTop="20dp"
        android:id="@+id/newgoods_message_rl"
        android:layout_below="@id/newgoods_title_rl"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/newname_tv"
            android:text="商品名："
            android:gravity="right|center_vertical"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:id="@+id/newgoods_name_et"
            android:hint="请输入产品的名字"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/newprice_tv"
            android:layout_marginTop="50dp"
            android:text="价 格："
            android:gravity="right|center_vertical"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="50dp"
            android:id="@+id/newgoods_price_et"
            android:hint="请输入产品的价格"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/newclass_tv"
            android:layout_marginTop="100dp"
            android:text="类 别："
            android:gravity="right|center_vertical"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="100dp"

            android:id="@+id/newgoods_class_et"
            android:hint="请选择商品类别"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/newnumber_tv"
            android:layout_marginTop="150dp"
            android:text="数 量："
            android:gravity="right|center_vertical"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="150dp"
            android:id="@+id/newgoods_number_et"
            android:hint="请输入商品的数量"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="200dp"
            android:text="描 述："
            android:gravity="right|center_vertical"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="200dp"
            android:inputType="none"
            android:focusableInTouchMode="true"
            android:gravity="top|left"
            android:singleLine="false"
            android:padding="4dp"
            android:background="@drawable/edittext_border"
            android:clickable="true"
            android:id="@+id/newgoods_introduction_et"
            android:hint="请输入产品的描述"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/newgoods_message_rl"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/newaddgoods_iv"
            android:src="@drawable/selector_image_add"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/newadd_ll"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_rectangle">

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@drawable/shape"
            android:id="@+id/newgoods_confirm_bt"
            android:text="确认发布"
            android:textColor="#030303"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>

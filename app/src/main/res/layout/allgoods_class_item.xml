<?xml version="1.0" encoding="utf-8"?>
<zjc.qualitytrackingee.utils.AllGoodsClassRecyclerItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@android:color/white"
    android:layout_marginBottom="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/goodsclass_slide"
            android:layout_toRightOf="@+id/allgoodsclass_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/delete_goodsclass_tv"
                android:layout_height="match_parent"
                android:layout_width="80dp"
                android:gravity="center"
                android:background="#EE7621"
                android:text="删除" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/allgoodsclass_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/content_white"
            android:orientation="horizontal">


                    <TextView
                        android:id="@+id/goodsclass_name_tv"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:text="电脑类" />


        </LinearLayout>

    </RelativeLayout>

</zjc.qualitytrackingee.utils.AllGoodsClassRecyclerItemView>

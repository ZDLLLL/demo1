<?xml version="1.0" encoding="utf-8"?>
<zjc.qualitytrackingee.utils.RecyclerItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@android:color/white"
    android:layout_marginBottom="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/check_slide"
            android:layout_toRightOf="@+id/check_user_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/check_agree_tv"
                android:layout_height="match_parent"
                android:layout_width="80dp"
                android:gravity="center"
                android:background="#EE7621"
                android:text="同 意" />

            <TextView
                android:id="@+id/check_disagree_tv"
                android:layout_height="match_parent"
                android:layout_width="80dp"
                android:gravity="center"
                android:background="@drawable/button_red"
                android:text="不同意"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/check_user_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/content_white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/check_image_iv"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/check_name_tv"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:text="开发交流群" />

                    <TextView
                        android:id="@+id/check_phone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textColor="#747373"
                        android:textSize="15sp"
                        android:text="18248617820"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/check_post_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#747373"
                    android:textSize="14sp"
                    android:text="董事长" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</zjc.qualitytrackingee.utils.RecyclerItemView>